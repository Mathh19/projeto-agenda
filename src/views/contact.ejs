    <%- include('includes/nav')%>
    <%- include('includes/head')%>

    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>

            <div class="col-lg-8 my-3">
                <h1 class="text-center">Contato</h1>
                <p class="text-center lead">Adicione ou edite seu contato abaixo.</p>

                <%- include('includes/messages')%>

                <% if(contact._id) { %>
                    <form class="form-contact-edit" action="/contact/edit/<%= contact._id %>" method="POST">
                <% } else { %>
                <form class="form-contact-register" action="/contact/register" method="POST">
                <% } %>
                    <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                    <div class="form-group my-3">
                        <label>Nome:</label>
                        <input value="<%= contact.nome %>" type="text" class="form-control" name="nome">
                    </div>
                    <div class="form-group my-3">
                        <label>Sobrenome:</label>
                        <input value="<%= contact.sobrenome %>" type="text" class="form-control" name="sobrenome">
                    </div>
                    <div class="form-group my-3">
                        <label>Email:</label>
                        <input value="<%= contact.email %>" type="email" class="form-control email-validate" name="email">
                    </div>
                    <div class="form-group my-3">
                        <label>Telefone:</label>
                        <input value="<%= contact.telefone %>" type="tel" class="form-control telefone-validate" name="telefone">
                    </div>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </form>

            </div>

            <div class="col-lg-2"></div>
        </div>
    </div>

    <%- include('includes/footer')%>